@model PROYECTO_SER_WEB.Models.Productos

@{
    ViewData["Title"] = "Agregar al Carrito";
}

<div class="container mt-5" style="background-color: #1a2a3a; color: white; border-radius: 10px; padding: 20px;">
    <h1 class="text-center mb-4">Agregar Producto al Carrito</h1>

    <div class="row">
        <!-- Información del producto -->
        <div class="col-md-6">
            <div class="card h-100 shadow" style="background-color: #2c3e50; color: white;">
                <img src="@Url.Content("/IMAGENES/" + Model.cod_prod + ".jpg")"
                     class="card-img-top"
                     alt="@Model.nom_prod"
                     style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@Model.nom_prod</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Código:</dt>
                        <dd class="col-sm-8">@Model.cod_prod</dd>

                        <dt class="col-sm-4">Precio:</dt>
                        <dd class="col-sm-8">S/. @Model.pre_prod</dd>

                        <dt class="col-sm-4">Stock:</dt>
                        <dd class="col-sm-8">@Model.stk_prod</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Formulario para agregar al carrito -->
        <div class="col-md-6">
            <div class="card h-100 shadow" style="background-color: #34495e; color: white;">
                <div class="card-body">
                    <h5 class="card-title text-center">Detalles de Compra</h5>
                    <form asp-action="AgregarAlCarrito">
                        <div class="form-group">
                            <label for="cantidad">Cantidad:</label>
                            @Html.TextBox("cantidad", 1, new { @class = "form-control", type = "number", min = "1", max = Model.stk_prod })
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Agregar Producto</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-action="IndexProductos" class="btn btn-warning btn-lg">Seguir Comprando</a>
                        <a asp-action="VerCarrito" class="btn btn-success btn-lg">Ver Carrito</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensaje de estado -->
    <br />
    @if (ViewBag.mensaje != null)
    {
        <div class="alert alert-info mt-4">
            <h4><strong>@ViewBag.mensaje</strong></h4>
        </div>
    }
</div>
